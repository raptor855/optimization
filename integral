#include <iostream>
#include<iomanip>
#include <cstdlib>
#include <time.h>
#define _USE_MATH_DEFINES
#include <math.h>
using namespace std;

double f(double x)
{
	int ver = 1;
	if (ver == 1)
	{
		return 1.0 / log(x);
	}
}

void main(void)
{
	srand(time(NULL));
	cout.precision(12);
	system("color 0A");
	int n = 5;
	double a = 2, b = 5;
	double x, S;
	//cin >> n;
	//cin >> a >> b;
	double h;
	h = (b - a) / n;
	cout << "Promejutok integr [" << a << ";" << b << "]" << endl;
	cout << "Kolvo otrezkov " << n << endl;
	cout << "Shag razbieniy " << h << endl;
	cout << "Metod srednix prym\n";
	x = a;
	S = 0.0;
	for (int i = 0; i < n; i++)
	{
		S += f(x + h / 2.0);
		x += h;
	}
	S *= h;
	cout << "S: " << S << endl;
	cout << "Metod trapeciy\n";
	x = a;
	S = (f(x) + f(b)) / 2.0;
	for (int i = 1; i < n; i++)
	{
		x += h;
		S += f(x);
	}
	S *= h;
	cout << "S: " << S << endl;
	cout << "Metod Simpsona\n";
	double N, H, s;
	N = n * 2.0;
	H = (b - a) / N;
	cout << "Kolvo otrezkov " << N << endl;
	cout << "Shag razbieniy " << H << endl;
	S = 0.0;
	S += f(a);
	S += f(b);
	s = 0.0;
	x = a;
	//cout << "Chet\n";
	for (int i = 1; i < n; i++)
	{
		x += 2.0 * H;
		s += f(x);
	}
	S += 2.0 * s;
	s = 0.0;
	x = a + H;
	//cout << "NeChet\n";
	for (int i = 0; i < n; i++)
	{
		s += f(x);
		x += 2.0 * H;
	}
	S += 4.0 * s;
	S *= H / 3.0;
	cout << "S: " << S << endl;
	system("pause");
}
