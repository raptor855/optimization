#include <iostream>
#include <cstdlib>
#include <time.h>
using namespace std;

void main(void)
{
	srand(time(NULL));
	cout.precision(12);
	system("color 0A");
	int razmerA;
	cin >> razmerA;
	double** A = new double*[razmerA];
	double* X = new double[razmerA], *b = new double[razmerA];

	cout << "X = ( ";
	for (int i = 0; i < razmerA; i++)
	{
		X[i] = (1.0 + rand()) / 10000;
		if (razmerA <= 5)
			cout << X[i] << " ";
	}
	cout << ")" << "\n";

	cout << "A = ( " << "\n";
	for (int i = 0; i < razmerA; i++)
	{
		A[i] = new double[razmerA];
		for (int j = 0; j < razmerA; j++)
		{
			A[i][j] = (1.0 + rand()) / 1000;
			if (razmerA <= 5)
				cout << A[i][j] << " ";
		}
		if (razmerA <= 5)
			cout << "\n";
	}
	cout << ")" << "\n";

	for (int i = 0; i < razmerA; i++)
	{
		A[i][i] += 100000;
	}

	cout << "B = ( ";
	for (int i = 0; i < razmerA; i++)
	{
		b[i] = 0;
		for (int j = 0; j < razmerA; j++)
		{
			b[i] += A[i][j] * X[j];
		}
		if (razmerA <= 5)
			cout << b[i] << " ";
	}
	cout << ")" << "\n";

	/////   Якоби   /////
	cout << "\nRkobi\n\n";

	double** B = new double*[razmerA];
	double* Xk = new double[razmerA], *Xi = new double[razmerA];
	bool f = true, necxod = false;
	double max, E = 1.0e-6;
	int n = 0, x = 0;
	//cin >> x;
	if (x == 1)
	{
		b[0] = 20;
		b[1] = -40;
		b[2] = 28;
		A[0][0] = 115;
		A[0][1] = -20;
		A[0][2] = -75;
		A[1][0] = 15;
		A[1][1] = -50;
		A[1][2] = -5;
		A[2][0] = 6;
		A[2][1] = 2;
		A[2][2] = 20;
		X[0] = 1;
		X[1] = 1;
		X[2] = 1;
	}
	else if (x == 2)
	{
		b[0] = 5;
		b[1] = 24;
		b[2] = 36.01;
		A[0][0] = 10;
		A[0][1] = 2;
		A[0][2] = -1;
		A[1][0] = -2;
		A[1][1] = -6;
		A[1][2] = -1;
		A[2][0] = 1;
		A[2][1] = -3;
		A[2][2] = 12;
		X[0] = 1.63;
		X[1] = -4.82;
		X[2] = 1.66;
	}


	for (int i = 0; i < razmerA; i++)
	{
		B[i] = new double[razmerA];
		for (int j = 0; j < razmerA; j++)
		{
			if (i != j)
			{
				B[i][j] = (A[i][j] / A[i][i]) * (-1.0);
			}
		}
		B[i][i] = 0;
	}
	for (int i = 0; i < razmerA; i++)
	{
		for (int j = 0; j < razmerA; j++)
		{
			//cout << B[i][j] << " ";
		}
		//cout << "\n";
	}
	max = 0;
	double sum;
	for (int i = 0; i < razmerA; i++)
	{
		sum = 0;
		for (int j = 0; j < razmerA; j++)
		{
			sum += abs(B[i][j]);
		}
		if (sum > max)
			max = sum;
	}
	for (int j = 0; j < razmerA; j++)
	{
		sum = 0;
		for (int i = 0; i < razmerA; i++)
		{
			sum += abs(B[i][j]);
		}
		if (sum > max)
			max = sum;
	}
	cout << "max: " << max << "\n";
	if (max >= 1)
	{
		necxod = true;
	}
	//X(0)
	cout << "X(0)\n";
	for (int i = 0; i < razmerA; i++)
	{
		Xi[i] = b[i] * (1 / A[i][i]);
		//cout << Xi[i] << "\n";
	}
	//X(1)
	cout << "X(1)\n";
	for (int i = 0; i < razmerA; i++)
	{
		Xk[i] = 0;
		for (int j = 0; j < razmerA; j++)
		{
			if (i != j)
				Xk[i] -= (A[i][j] / A[i][i]) * Xi[j];
		}
		Xk[i] += b[i] / A[i][i];
		//cout << Xk[i] << "\n";
	}
	n++;

	max = 0;
	for (int i = 0; i < razmerA; i++)
	{
		if (abs(Xk[i] - Xi[i]) > max)
			max = abs(Xk[i] - Xi[i]);
	}
	cout << "X(k)\n";
	while (max > E && !necxod && n<1000)
	{
		max = 0;
		if (f)
		{
			//cout << "F1\n";
			for (int i = 0; i < razmerA; i++)
			{
				Xi[i] = 0;
				for (int j = 0; j < razmerA; j++)
				{
					if (i != j)
						Xi[i] -= (A[i][j] / A[i][i]) * Xk[j];
				}
				Xi[i] += b[i] / A[i][i];
				//cout << Xi[i] << "\n";
			}
		}
		else
		{
			//cout << "F2\n";
			for (int i = 0; i < razmerA; i++)
			{
				Xk[i] = 0;
				for (int j = 0; j < razmerA; j++)
				{
					if (i != j)
						Xk[i] -= (A[i][j] / A[i][i]) * Xi[j];
				}
				Xk[i] += b[i] / A[i][i];
				//cout << Xk[i] << "\n";
			}
		}
		for (int i = 0; i < razmerA; i++)
		{
			if (abs(Xk[i] - Xi[i]) > max)
				max = abs(Xk[i] - Xi[i]);
		}
		n++;
		f = !f;
		//cout << "/////" << max << "\n";
	}
	if (necxod)
	{
		cout << "necxod\n";
	}
	else {
		max = 0;
		if (f) {
			for (int i = 0; i < razmerA; i++)
			{
				//cout << Xk[i] << "\n";
				if (abs(X[i] - Xk[i]) > max)
					max = abs(X[i] - Xk[i]);
			}
		}
		else {
			for (int i = 0; i < razmerA; i++)
			{
				//cout << Xi[i] << "\n";
				if (abs(X[i] - Xi[i]) > max)
					max = abs(X[i] - Xi[i]);
			}
		}
		cout << "Itter: " << n << "\n";
		cout << "raznica: " << max << "\n";
	}

	/////   Зейделя   /////
	cout << "\nZeidelR\n\n";

	n = 0;
	f = true;

	//X(0)
	cout << "X(0)\n";
	for (int i = 0; i < razmerA; i++)
	{
		Xi[i] = b[i] * (1 / A[i][i]);
		//cout << Xi[i] << "\n";
	}
	//X(1)
	cout << "X(1)\n";
	for (int i = 0; i < razmerA; i++)
	{
		Xk[i] = 0;
		for (int j = 0; j < razmerA; j++)
		{
			if (j > i)
				Xk[i] -= (A[i][j] / A[i][i]) * Xi[j];
			else if (j < i)
				Xk[i] -= (A[i][j] / A[i][i]) * Xk[j];
		}
		Xk[i] += b[i] / A[i][i];
		//cout << Xk[i] << "\n";
	}
	n++;

	max = 0;
	for (int i = 0; i < razmerA; i++)
	{
		if (abs(Xk[i] - Xi[i]) > max)
			max = abs(Xk[i] - Xi[i]);
	}
	cout << "X(k)\n";
	while (max > E && !necxod && n<1000)
	{
		max = 0;
		if (f)
		{
			//cout << "F1\n";
			for (int i = 0; i < razmerA; i++)
			{
				Xi[i] = 0;
				for (int j = 0; j < razmerA; j++)
				{
					if (j > i)
						Xi[i] -= (A[i][j] / A[i][i]) * Xk[j];
					else if (j < i)
						Xi[i] -= (A[i][j] / A[i][i]) * Xi[j];
				}
				Xi[i] += b[i] / A[i][i];
				//cout << Xi[i] << "\n";
			}
		}
		else
		{
			//cout << "F2\n";
			for (int i = 0; i < razmerA; i++)
			{
				Xk[i] = 0;
				for (int j = 0; j < razmerA; j++)
				{
					if (j > i)
						Xk[i] -= (A[i][j] / A[i][i]) * Xi[j];
					else if (j < i)
						Xk[i] -= (A[i][j] / A[i][i]) * Xk[j];
				}
				Xk[i] += b[i] / A[i][i];
				//cout << Xk[i] << "\n";
			}
		}
		for (int i = 0; i < razmerA; i++)
		{
			if (abs(Xk[i] - Xi[i]) > max)
				max = abs(Xk[i] - Xi[i]);
		}
		n++;
		f = !f;
		//cout << "/////" << max << "\n";
	}

	if (!necxod) {
		max = 0;
		if (f) {
			for (int i = 0; i < razmerA; i++)
			{
				//cout << Xk[i] << "\n";
				if (abs(X[i] - Xk[i]) > max)
					max = abs(X[i] - Xk[i]);
			}
		}
		else {
			for (int i = 0; i < razmerA; i++)
			{
				//cout << Xi[i] << "\n";
				if (abs(X[i] - Xi[i]) > max)
					max = abs(X[i] - Xi[i]);
			}
		}
		cout << "Itter: " << n << "\n";
		cout << "raznica: " << max << "\n";
	}

	system("pause");
}
